{
  "name": "otf2svg",
  "version": "1.0.2",
  "description": "Convert Open Type (OTF) font files to SVG font files",
  "author": "Eric P. Bishop <ericpaulbishop@gmail.com>",
  "repository": "github:ericpaulbishop/otf2svg",
  "bin": {
    "otf2svg": "./lib/index.js"
  },
  "main": "./lib/index.js",
  "scripts": {
    "build": "babel ./src --out-dir ./lib",
    "lint": "eslint ./src",
    "test": "ava --timeout=3m --verbose "
  },
  "keywords": [
    "opentype",
    "otf",
    "svg",
    "font",
    "typography",
    "subset",
    "glyph",
    "otf2svg",
    "convert",
    "webfont",
    "font-face"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "fontkit": "^1.8.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "ava": "^3.12.1",
    "eslint": "^7.6.0",
    "eslint-ci": "^1.0.0",
    "fonteditor-core": "^2.1.2",
    "mkdirp": "^0.5.1"
  },
  "lint-staged": {
    "*.js": "eslint --fix"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "env": {
      "node": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "rules": {
      "no-empty": [
        "error",
        {
          "allowEmptyCatch": true
        }
      ]
    }
  }
}
